<div class="card card-body bg-info">
	<% if flash[:alert] %>
		<p id = "notice"><%=flash[:alert] %></p>
	<%end%>
	
	<%= form_tag do %>
	<fieldset>
		<legend>Please Log In</legend>
		<div class ="form-group">
			<%= label_tag :name,'Name:'%><br>
			<%= text_field_tag :name, '',:class => 'form_control  text_center'%>
		</div>
		<div class="form-group">
			<%= label_tag :password, 'Password:'%><br>
			<%= text_field_tag :password, '',:class => 'form_control text_center'%>
		</div>
		<div form-group>
			<%= submit_tag "Login", :class => 'btn btn-primary' %>
		</div>
		<div>
			<p>If you don't have an account please <%= link_to 'Sign up', signup_url %></p>		
		</div>
	</fieldset>
	<%end%>
</div>